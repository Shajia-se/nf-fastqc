params {
  fastqc_raw_data   = "$HOME/data"
  project_folder    = "$HOME"
  outdir            = "fastqc_output"
  container_fastqc  = "$HOME/singularity_images/fastqc-0.11.9.sif"
  queue             = 'cpu_p'
  cpus              = 4
  memory            = '8GB'
  time              = '2h'
  extra_mounts      = ''
}

profiles {
  hpc {
    singularity.enabled     = true
    singularity.autoMounts  = true

    process {
      executor         = 'slurm'
      queue            = params.queue
      cpus             = params.cpus
      memory           = params.memory
      time             = params.time
      container        = params.container_fastqc
      containerOptions = params.extra_mounts
    }

    process {
      withName: 'FASTQC' {
        cpus   = 8
        memory = '20GB'
        time   = '1h'
      }
    }
  }
}
